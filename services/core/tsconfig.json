{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "@loopback/build/config/tsconfig.common.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "experimentalDecorators": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "typeRoots": [
        "./node_modules/@types"
    ]
  },
  "lib": ["es2017", "es7", "es6", "dom"],
  "include": ["src", "src/**/*"],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "dist"
  ]
}
