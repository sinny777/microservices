{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "@loopback/build/config/tsconfig.common.json",
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "typeRoots": [
        "./node_modules/@types"
    ]
  },
  "include": ["src", "src/**/*.json"],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "dist"
  ]
}
