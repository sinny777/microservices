{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./out-tsc/app",
        "types": []
    },
    "files": [
        "src/main.ts",
        "src/polyfills.ts"
    ],
    "include": [
        "src/**/*.d.ts",
        "src/*.d.ts",
		"src/*.html",
		"src/**/*",
        "typings/**/*"
	],
	"exclude": [
		"test.ts",
		"**/*.spec.ts"
	],
	"angularCompilerOptions": {
		"fullTemplateTypeCheck": false,
		"strictInjectionParameters": true,
		"enableIvy": false
	}
}
